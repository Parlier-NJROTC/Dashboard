---
import Layout from '../../layouts/Layout.astro';

---

<Layout title="SignUp">
    <div id="SignUp">
        <div class="Title">Sign Up</div>
        <input placeholder="Full Name" type="text">
        <input placeholder="Password" type="password">
        <input placeholder="Password" type="password">
        <div>NS<input type="number" id="Year3321" min="1" max="4" ></div>
        
    </div>
</Layout>

<style>
    #SignUp{
        position: absolute;
            top: 10%;
            left: 50%;
            transform: translateX(-50%);
            background-color: whitesmoke;
            z-index: 99;
            padding: 10px;
            color: rgb(0, 0, 0);
            width: calc(30% - 25px);
            height: calc(80% - 25px);
            display: grid;
            justify-items: center;
            align-items: start;
            border-radius: 10px;

            box-shadow: 0 0 1rem #0003;
            background-color: #ffffff26;
            backdrop-filter: blur(5px);

            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
    }
    .Title{
        padding: 10px;
            position: relative;
            font-size: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: start;
            border-radius: 10px;
            z-index: 99;
            top: 0%;
            width: 90%;

            opacity: 70%;
            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
    }
    .sanchez-regular {
            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
    }
    .sanchez-regular-italic {
        font-family: "Sanchez", serif;
        font-weight: 400;
        font-style: italic;
    }
    {
            display: flex;
            flex-direction: column;
            gap: 0px;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            height: 40px;
          outline: none;

          font-size:30px;
          font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
        }
        input[type="number"]{
            outline: none;
            width: 11px;
            
            font-size: 17px;
          font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
        }
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
        }

        /* Firefox */
        input[type=number] {
        -moz-appearance: textfield;
        }
        input[type="text"]::placeholder,
        input[type="password"]::placeholder,
        input[type="number"]::placeholder {
        color: rgb(0, 0, 0);
        opacity: 1; 


        font-family: "Sanchez", serif;
        font-weight: 400;
        font-style: normal;
        }

        input[type="text"]::-ms-input-placeholder,
        input[type="password"]::-ms-input-placeholder,
        input[type="number"]::-ms-input-placeholder { 
        color: rgb(0, 0, 0);
        background: none !important;

        font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
        }
        .input-text-large {
            font-size: 24px;
        }
        input[type="text"],
        input[type="password"],
        input[type="number"] {
            background: none;
            border: double;
            border-top: none;
            border-left: none;
            border-right: none;

            color: #000;

            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
        }
        input:-webkit-autofill ,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            background: none !important;
        }
        input:-moz-autofill {
            background-image: none !important;
            background-color: transparent !important;
        }
