---
import Layout from '../layouts/Layout.astro';

import { API_URL } from 'astro:env/client';

---

<Layout title="Login">
    <div id="Status"><!-- Uncomment for place holder: Error 404: Lorem Ipsum --></div>
    <a id="hiddenRedirectionBecauseAstroOnlyDoesThisNow" href="/Dashboard/Home" style="display: none;">this is supposed to be hidden</a>
    <span>
        <div id="Login" class="sanchez-regular">
            Login
            <img src="https://raw.githubusercontent.com/Parlier-NJROTC/Assets/main/Other/NJROTC-Seal.svg" style="top:130%; position:absolute; width: 80px; height: 80px;">
        </div>
        <form id="The-Login-Form">
            <div class="login-form">
                <div class="input-group">
                    <label for="username"></label>
                    <input placeholder="Saul Sanchez" type="text" id="username" name="username" required aria-required="true" class="input-text-large">
                </div>
                <div class="input-group password-container"  style="padding-down: 50px;">
                    <label for="password"></label>
                    <input placeholder="Parlier1" type="password" id="password" name="password"  class="input-text-large" autocomplete="current-password">
                    <div class="password-checkbox">
                        <img src="https://raw.githubusercontent.com/Parlier-NJROTC/Assets/refs/heads/main/Other/eye-svgrepo-com.svg" alt="Show Password" class="hide-icon" style="width: 20px;height: 20px;cursor: pointer;display: none;">
                        <img src="https://raw.githubusercontent.com/Parlier-NJROTC/Assets/refs/heads/main/Other/eye-hide-svgrepo-com.svg" alt="Hide Password" class="show-icon" style="width: 20px;height: 20px;cursor: pointer;">
                    </div>
                </div>
                <div class="input-group" style="padding-top: 50px;">
                    <button class="sanchez-regular">Login</button>
                </div>
            </div>
        </form>
    </span>
</Layout>
<script>
    
</script>
<!-- screw this im setting the default language to js -->
<script lang="js" define:vars={{API_URL}}>

    console.log("work pls")
    /**
     * @type {HTMLFormElement}
     */
    let form = document.getElementById("The-Login-Form")

    // these are notes because I forget what this does
    form.onsubmit = async (ev)=>{
        ev.preventDefault() // stop it from loading it and putting it in url, its dam spegetti

        //All this does is just parse form to json
        const formData = new FormData(form);
        const jsonObject = {};
        formData.forEach((value, key) => {
            jsonObject[key] = value;
        });
        console.log("Parsed Data" + JSON.stringify(jsonObject))

        //Send request with data
        const Response = await fetch(API_URL+"auth/login",{
            method:"POST",
            headers:{
                "Content-Type":"application/json"
            },
            body:JSON.stringify(jsonObject)
        })
        /**
         * @type {{success:Boolean,message:String}}
         */
        const Data = await Response.json()
        console.log(Data)

        if(Data.success){
            localStorage.setItem("Token",Data.token)
            document.getElementById("Status").innerText = `${Data.message}`
            document.getElementById("hiddenRedirectionBecauseAstroOnlyDoesThisNow").click()
            console.log(Data)
        }else{
            document.getElementById("Status").innerText = `${Data.message}`
        }
    }
    // Don't touch Plaes
    document.querySelector('.password-checkbox').addEventListener('click', function() {
        var x = document.getElementById("password");
        var showIcon = document.querySelector('.hide-icon');
        var hideIcon = document.querySelector('.show-icon');

        if (x.type === "password") {
            x.type = "text";
            showIcon.style.display = 'block';
            hideIcon.style.display = 'none';
        } else {
            x.type = "password";
            showIcon.style.display = 'none';
            hideIcon.style.display = 'block';
        }
    });

</script>


    <style>

        #Status{
            left: 50%;
            transform: translate(-50%,0%);
            color: white;
            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;

            position: absolute;
            top: 25px;
            padding-left: 15px;
            padding-right: 15px;

            background-color: navy;
            transition: ease-in 450ms;

        }
        button {
            font-size: 20px;
            padding: 10px;
            border: none;
            outline: none;
            cursor: pointer;
            background: linear-gradient(300deg, #105c69, #3c9d9e, #7db5b6, #c8dae5);
            border-radius: 5px;
            position: relative;
            z-index: 1;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        button:hover {
            transform: scale(1.05); 
            box-shadow: 15px 15px 20px rgba(0,0,0,0.19), 0 10px 10px rgba(0,0,0,0.23);
        }     
        button:active{
            transform: scale(.90); 
            box-shadow: 0px 0px 0px rgba(0,0,0,0); 
        }
    #Login {
            padding: 10px;
            position: relative;
            font-size: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: start;
            border-radius: 10px;
            z-index: 99;
            top: 0%;
            width: 30%;

            opacity: 70%;
        }

        span {
            position: absolute;
            top: 10%;
            left: 50%;
            transform: translateX(-50%);
            background-color: whitesmoke;
            z-index: 99;
            padding: 10px;
            color: rgb(0, 0, 0);
            width: calc(30% - 25px);
            height: calc(80% - 25px);
            display: grid;
            justify-items: center;
            align-items: start;
            border-radius: 10px;

            box-shadow: 0 0 1rem #0003;
            background-color: #ffffff26;
            backdrop-filter: blur(5px);
        }
        img{
            user-select: none;
			-moz-user-select: none;
			-webkit-user-select: none;
			-ms-user-select: none;
			-webkit-user-drag: none;
			-moz-user-drag: none;
			-ms-user-drag: none;
        }

        .login-form {
            display: grid;
            grid-template-columns: 1fr;
            gap: 10px;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            gap: 0px;
        }
        .input-group input[type="text"],
        .input-group input[type="password"] {
            width: 100%;
            height: 40px;
          outline: none;
        }
        .input-group input[type="text"]::placeholder,
        .input-group input[type="password"]::placeholder {
        color: rgb(0, 0, 0);
        opacity: 1; 
        }

        .input-group input[type="text"]::-ms-input-placeholder,
        .input-group input[type="password"]::-ms-input-placeholder { 
        color: rgb(0, 0, 0);
        background: none !important;
        }
        .input-text-large {
            font-size: 24px;
        }
        .input-group input[type="text"],
        .input-group input[type="password"] {
            background: none;
            border: double;
            border-top: none;
            border-left: none;
            border-right: none;

            color: #000;
        }
        input:-webkit-autofill ,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            background: none !important;
        }
        input:-moz-autofill {
            background-image: none !important;
            background-color: transparent !important;
        }

        .sanchez-regular {
            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
        }
        .sanchez-regular-italic {
        font-family: "Sanchez", serif;
        font-weight: 400;
        font-style: italic;
        }

    </style>

