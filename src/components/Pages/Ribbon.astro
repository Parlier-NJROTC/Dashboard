---
import List from '../ReQestMenu/Request_List.astro';
import Menu from '../ReQestMenu/ItemMenu.astro';
import File from '../ReQestMenu/file_upload.astro';


import { API_URL } from 'astro:env/client';
---

  <div class="astro-component">
    <Menu></Menu>
  </div>
    <div class="content">
      <List></List>
      <div class="box">
        <File></File>
        <button id="Buttonn">Open Items Selector</button>
        <button id="SubmitRibbons">Sumite</button>
        </div>
      </div>
    </div>

  <!-- if it work no touchy until I says so -->
  <script>
    import { API_URL } from 'astro:env/client';
    document.getElementById("SubmitRibbons")!.onclick = async () =>{
      const Response = await fetch(API_URL+"home/request/",{
            method:"POST",
            headers:{
              'Authorization':`Bearer ${localStorage.getItem("Token")}`,
              "Content-Type":"application/json"
            },
            body:JSON.stringify({
              ribbons:localStorage.getItem("selectedItems")
              // look just dont name it ribbons for some dumb reason
              //ribbons:["what"]//localStorage.getItem("selectedItems")
            })
      })
    }
  </script>

  <script lang="js">

    document.getElementById('Buttonn').addEventListener('mousedown', function() {
      const astroComponent = document.querySelector('.astro-component');
      const o = document.querySelector('.Setimg');
      astroComponent.style.display = 'block';
      astroComponent.style.opacity = '1';
      o.style.display = 'none';
      o.style.opacity = '0';
    });
  </script>

  <style>
    body {
      position: relative;
      height: 100vh;
      margin: 0;
      overflow: hidden;
    }
    #Buttonn:active {
      background-color: rgb(0, 0, 0);
      border: 5px double #ffffff;
      color: white;

    }
   .box {
      top: 130px;
      display: flex;
      justify-content: center;
      align-items: flex-end;
      position: absolute;
      right: 50px;
      background-color: whitesmoke;
      z-index: 90;
      padding: 10px;
      color: rgb(0, 0, 0);
      font-size: 16px;
      width: 25%;
      height: 75%;
    }
    #Buttonn {
      background-color: rgb(255, 255, 255);
      border: 5px double #000000;
      border-radius: 5px;
      padding: 10px;
      color: #495057;
      font-size: 16px;
      width: 95%;
      text-align: center;
      position: absolute;
      height: 50px;
      z-index: 90;
      bottom: 150px;

      font-family: 'Sanchez';
    }
    #SubmitRibbons{
      position: absolute;
      bottom: 40px;

      width: 20vw;
      height: 5vw;

      font-family: 'Sanchez';
    }
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

   .astro-component {
      animation: fadeIn 0.5s ease-in-out forwards;
      position: relative;
      display: none;
      z-index: 9999;
      width: 100%;
      height: 100%;
    }
  </style>
