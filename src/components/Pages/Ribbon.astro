---
import List from '../ReQestMenu/Request_List.astro';
import Menu from '../ReQestMenu/ItemMenu.astro';
import File from '../ReQestMenu/file_upload.astro'
---

  <div class="astro-component">
    <Menu></Menu>
  </div>
    <div class="content">
      <List></List>
      <div class="box">
        <File></File>
        <button id="Buttonn">Open Ribbon Selector</button>
        <input type="file" id="fileInput" accept=".jpg,.png,.jpeg" style="display:none;" onchange="previewImage(this)" />
        <div class="custom-file-upload" onclick="document.getElementById('fileInput').click()">
          <div class="image-preview"></div>
        </div>
      </div>
    </div>

  <script lang="js">

    document.getElementById('Buttonn').addEventListener('mousedown', function() {
      const astroComponent = document.querySelector('.astro-component');
      astroComponent.style.display = 'block';
      astroComponent.style.opacity = '1';
    });
  </script>

  <style>
    body {
      position: relative;
      height: 100vh;
      margin: 0;
      overflow: hidden;
    }
    #Buttonn:active {
      background-color: rgb(0, 0, 0);
      border: 5px double #ffffff;
      color: white;

    }
   .box {
      top: 130px;
      display: flex;
      justify-content: center;
      align-items: flex-end;
      position: absolute;
      right: 50px;
      background-color: whitesmoke;
      z-index: 90;
      padding: 10px;
      color: rgb(0, 0, 0);
      font-size: 16px;
      width: 25%;
      height: 75%;
    }
    #Buttonn {
      background-color: rgb(255, 255, 255);
      border: 5px double #000000;
      border-radius: 5px;
      padding: 10px;
      color: #495057;
      font-size: 16px;
      width: 95%;
      text-align: center;
      position: absolute;
      height: 50px;
      z-index: 90;
      bottom: 150px;
    }
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

   .astro-component {
      animation: fadeIn 0.5s ease-in-out forwards;
      position: relative;
      display: none;
      z-index: 9999;
      width: 100%;
      height: 100%;
    }
  </style>
