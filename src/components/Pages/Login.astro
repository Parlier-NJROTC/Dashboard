<body>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@500&family=Sanchez:ital@0;1&display=swap" rel="stylesheet">

    <span style="border: 10px rgb(0, 0, 0) double;">
        <div id="Login" class="sanchez-regular">
            Login
            <img src="https://raw.githubusercontent.com/Parlier-NJROTC/Assets/main/Other/NJROTC-Seal.svg" style="top:130%; position:absolute; width: 60px; height: 60px;">
        </div>
        <form>
            <div class="login-form">
                <div class="input-group">
                    <label for="username"></label>
                    <input placeholder="Saul Sanchez" type="text" id="username" name="username" required aria-required="true" class="input-text-large">
                </div>
                <div class="input-group password-container"  style="padding-down: 50px;">
                    <label for="password"></label>
                    <input placeholder="Parlier1" type="password" id="password" name="password" required aria-required="true" class="input-text-large">
                </div>            
                <div class="input-group" style="padding-top: 50px;">
                    <button class="sanchez-regular" type="submit">Login</button>
                </div>
            </div>
        </form>
    </span>
    <style>
        button{
            font-size: 20px;
            padding: 10px;
            border: none;
            outline: none;
            cursor: pointer;
            background: linear-gradient(300deg, #105c69, #3c9d9e, #7db5b6, #c8dae5);
            border-radius: 5px;
            position: relative;
            z-index: 1;
            transition: background 3s ease;
            border: 10px whitesmoke double;
        }
        button:hover{
            background: linear-gradient(310deg, #105c69, #3c9d9e, #7db5b6, #c8dae5);
        }
        #Login {
            padding: 10px;
            position: relative;
            font-size: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: start;
            border-radius: 10px;
            z-index: 99;
            top: 0%;
            width: 30%;
        }

        span {
            position: absolute;
            top: 10%;
            left: 50%;
            transform: translateX(-50%);
            background-color: whitesmoke;
            z-index: 99;
            padding: 10px;
            color: rgb(0, 0, 0);
            width: 30%;
            height: 80%;
            display: grid;
            justify-items: center;
            align-items: start;
            border-radius: 10px;
        }

       .login-form {
          display: grid;
          grid-template-columns: 1fr;
          gap: 10px;
        }

       .input-group {
          display: flex;
          flex-direction: column;
          gap: 0px;
        }
        
       .input-group input[type="text"],
       .input-group input[type="password"] {
          width: 100%;
          height: 40px;
          outline: none; /* Remove default focus border */
        }

       .input-text-large {
            font-size: 24px;
        }
        /* Ensures the custom focus style is visible against the background */
       .input-group input[type="text"],
       .input-group input[type="password"] {
          background-color: whitesmoke;
          border: double;
          border-top: none;
          border-left: none;
          border-right: none;
        }
        .sanchez-regular {
            font-family: "Sanchez", serif;
            font-weight: 400;
            font-style: normal;
        }
        .sanchez-regular-italic {
        font-family: "Sanchez", serif;
        font-weight: 400;
        font-style: italic;
        }

    </style>

</body>

</html>
