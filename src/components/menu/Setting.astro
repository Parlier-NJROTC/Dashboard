<style>
      /* Light mode styles */
      body.light-mode {
        background-color: white;
        color: black;
      }

      /* Dark mode styles */
      body.dark-mode {
        filter: invert(100%);
        color: rgb(0, 0, 0);
      }
      #Dashboard-Navigation.dark-mode{
        filter: invert(100%);
      }


    </style>
<script lang="JS">
  function toggleDarkMode() {
    document.body.classList.toggle('dark-mode');
    const darkModeState = localStorage.getItem('darkMode') === 'true'; 
    localStorage.setItem('darkMode', !darkModeState); 
  }
  

  function initDarkMode() {
    const darkModeEnabled = localStorage.getItem('darkMode') === 'true'; 
    if (darkModeEnabled) {
      document.body.classList.add('dark-mode');
    } else {
      document.body.classList.remove('dark-mode'); 
    }
  }
  
  initDarkMode();
  

  document.getElementById('darkModeLink').addEventListener('click', toggleDarkMode);
  
</script>

  
  </html>