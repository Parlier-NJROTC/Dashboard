      /* Light mode styles */
      body.light-mode {
        background-color: white;
        color: black;
      }

      /* Dark mode styles */
      body.dark-mode {
        filter: invert(100%);
        color: white;
      }


    </style>
<script lang="JS">
  // Function to toggle dark mode
  function toggleDarkMode() {
    document.body.classList.toggle('dark-mode');
    localStorage.setItem('darkMode',!localStorage.getItem('darkMode')); // Save the new state
  }
  
  // Function to initialize dark mode based on saved state
  function initDarkMode() {
    const darkModeEnabled = localStorage.getItem('darkMode') === 'true';
    if (darkModeEnabled) {
      document.body.classList.add('dark-mode');
    }
  }
  
  // Initialize dark mode on page load
  initDarkMode();
  
  // Attach the toggle function to the "Dark Mode" button
  document.getElementById('darkModeLink').addEventListener('click', toggleDarkMode);
  
</script>

  
