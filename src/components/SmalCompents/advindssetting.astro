<script lang="js">
    function updateSpan() {
        const topNavBgColor = document.getElementById('top-nav-bg-color').value;
        const navBgColor = document.getElementById('nav-bg-color').value;
        const navTxtColor = document.getElementById('nav-txt-color').value;
        const headerBgColor = document.getElementById('header-bg-color').value;
        const mainContentColor = document.getElementById('main-content-color').value;

        document.documentElement.style.setProperty('--top-nav-bg-color', topNavBgColor);
        document.documentElement.style.setProperty('--nav-bg-color', navBgColor);
        document.documentElement.style.setProperty('--nav-txt-color', navTxtColor);
        document.documentElement.style.setProperty('--header-bg-color', headerBgColor);
        document.documentElement.style.setProperty('--main-content-color', mainContentColor);

        const span = document.getElementById('auto-update-span');
        span.style.width = '80%';
        span.style.height = '80%';
        span.style.backgroundColor = topNavBgColor;
        span.style.color = navTxtColor;
    }

    function resetColor(id) {
        const input = document.getElementById(id);
        const defaultColor = getComputedStyle(document.documentElement).getPropertyValue(`--${id}`);
        input.value = defaultColor;
        updateSpan();
    }

    function resetAllColors() {
    const colorIds = [
        'top-nav-bg-color',
        'nav-bg-color',
        'nav-txt-color',
        'header-bg-color',
        'main-content-color',
        'dropdown-textcolor',
        'header-txt-color',
        'header-h2-color'
    ];

    colorIds.forEach(function(id) {
        const input = document.getElementById(id);
        const defaultColor = getComputedStyle(document.documentElement).getPropertyValue(`--${id}`);
        input.value = defaultColor;
    });}

    window.onload = function() {
        updateSpan();
    };
</script>
