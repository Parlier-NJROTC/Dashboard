---
import Link from "../components/menu/Link.astro";
import Setting from '../components/menu/Setting.astro';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import "./Dashboard.css"
interface Props {
	title: string;
}

const { title } = Astro.props;

---


<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Sanchez:ital@0;1&display=swap" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/public/NJROTC.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>DashBoard | {title}</title>
		<ViewTransitions fallback="animate"/>
</head>
<body>
    <div id="Dashboard-Title">
        <img src="/public/NJROTC.svg">
        <h1>NJROTC Dashboard</h1>
    </div>
    <header id="Dashboard-Header">
        <div id="User-Info">
            <h1> Cadet <span id="User-Rank">Seaman Recruit</span> <span id="User-Name">Sanchez</span></h1>
            <h3>NS<span id="Class-Name">0</span></h3>
        </div>
    </header>
    <nav id="Dashboard-Navigation">
        <Link title="Home">Home</Link>
        <Link title="Ribbon">Ribbons</Link>
    </nav>
    <main id="Dashboard-Content">
        <slot></slot>
    </main>
    <Setting></Setting>
</body>
</html>